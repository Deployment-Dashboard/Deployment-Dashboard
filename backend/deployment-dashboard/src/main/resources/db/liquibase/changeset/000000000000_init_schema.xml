<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
  xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.8.xsd">

  <changeSet id="1" author="system">
    <createTable tableName="apps">
      <column name="app_id" type="BIGINT" autoIncrement="true">
        <constraints primaryKey="true" nullable="false"/>
      </column>
      <column name="parent_id" type="BIGINT">
        <constraints nullable="true"/>
      </column>
      <column name="app_key" type="VARCHAR(255)">
        <constraints nullable="true" unique="true"/>
      </column>
      <column name="name" type="VARCHAR(255)">
        <constraints nullable="true"/>
      </column>
      <column name="archived_timestamp" type="TIMESTAMP(6)">
        <constraints nullable="true"/>
      </column>
    </createTable>
    <createTable tableName="envs">
      <column name="env_id" type="BIGINT" autoIncrement="true">
        <constraints primaryKey="true" nullable="false"/>
      </column>
      <column name="app" type="BIGINT">
        <constraints nullable="false" unique="true"/>
      </column>
      <column name="name" type="VARCHAR(255)">
        <constraints nullable="true" unique="true"/>
      </column>
    </createTable>
    <createTable tableName="deployments">
      <column name="id" type="BIGINT" autoIncrement="true">
        <constraints primaryKey="true" nullable="false"/>
      </column>
      <column name="env" type="BIGINT">
        <constraints nullable="false" unique="true"/>
      </column>
      <column name="ver" type="BIGINT">
        <constraints nullable="false" unique="true"/>
      </column>
      <column name="jira_url" type="VARCHAR(255)">
        <constraints nullable="true"/>
      </column>
      <column name="date" type="TIMESTAMP(6)">
        <constraints nullable="true"/>
      </column>
    </createTable>
    <createTable tableName="versions">
      <column name="ver_id" type="BIGINT" autoIncrement="true">
        <constraints primaryKey="true" nullable="false"/>
      </column>
      <column name="app" type="BIGINT">
        <constraints nullable="false" unique="true"/>
      </column>
      <column name="name" type="VARCHAR(255)">
        <constraints nullable="true" unique="true"/>
      </column>
      <column name="desc" type="VARCHAR(255)">
        <constraints nullable="true"/>
      </column>
      <column name="created_at" type="TIMESTAMP(6)">
        <constraints nullable="true"/>
      </column>
    </createTable>
  </changeSet>
</databaseChangeLog>
